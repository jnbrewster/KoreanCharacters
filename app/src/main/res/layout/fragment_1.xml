<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#33B5E5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout1"
        android:layout_weight="1">

        <!-- Equal weights cause two columns of equal width. -->

        <Button

            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="가"
            android:textSize="40sp"
            android:id="@+id/Button_ga"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColorHighlight="#000000" />

        <Button

            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="갸"
            android:textStyle="bold"
            android:textSize="40sp"
            android:id="@+id/Button_gya"
            android:paddingTop="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout2"
        android:layout_weight="1">

        <!-- Equal weights cause two columns of equal width. -->

        <Button

            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="거"
            android:textStyle="bold"
            android:textSize="40sp"
            android:id="@+id/Button_geo"/>

        <Button

            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="겨"
            android:textStyle="bold"
            android:textSize="40sp"
            android:id="@+id/Button_gyeo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout3"
        android:layout_weight="1">

        <Button

            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="고"
            android:textStyle="bold"
            android:textSize="40sp"
            android:id="@+id/Button_goh" />

        <Button

            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="교"
            android:textStyle="bold"
            android:textSize="40sp"
            android:id="@+id/Button_gyoh" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout4"
        android:layout_weight="1">

        <Button

            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="구"
            android:textStyle="bold"
            android:textSize="40sp"
            android:id="@+id/Button_goo" />

        <Button

            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="규"
            android:textStyle="bold"
            android:textSize="40sp"
            android:id="@+id/Button_gyoo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout5"
        android:layout_weight="1">

        <Button

            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="그"
            android:textStyle="bold"
            android:textSize="40sp"
            android:id="@+id/Button_geu" />

        <Button

            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="기"
            android:textStyle="bold"
            android:textSize="40sp"
            android:id="@+id/Button_gee" />
    </LinearLayout>


</LinearLayout>